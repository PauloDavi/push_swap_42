{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug push_swap",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.out", // Certifique-se de que o nome do executável esteja correto
            "args": [], // Argumentos do programa, se necessário
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "build push_swap", // Nome da tarefa para compilar o programa antes do debugging
            "miDebuggerPath": "/usr/bin/gdb" // Caminho para o executável do GDB no seu sistema
        }
    ]
}
